<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <jsp-config>
        <jsp-property-group>
            <display-name>template1</display-name>
            <url-pattern>/WEB-INF/history/returnBook.jsp</url-pattern>
            <url-pattern>/WEB-INF/author/createAuthor.jsp</url-pattern>
            <url-pattern>/WEB-INF/author/listAuthors.jsp</url-pattern>
            <url-pattern>/WEB-INF/reader/createReader.jsp</url-pattern>
            <url-pattern>/WEB-INF/book/listBooks.jsp</url-pattern>
            <url-pattern>/index.jsp</url-pattern>
            <url-pattern>/WEB-INF/history/takeOnBook.jsp</url-pattern>
            <url-pattern>/WEB-INF/history/listTakedBooks.jsp</url-pattern>
            <url-pattern>/WEB-INF/reader/listReaders.jsp</url-pattern>
            <url-pattern>/WEB-INF/book/createBook.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
            <include-prelude>/WEB-INF/jspf/header.jspf</include-prelude>
            <include-coda>/WEB-INF/jspf/footer.jspf</include-coda>
        </jsp-property-group>
    </jsp-config>
</web-app>
